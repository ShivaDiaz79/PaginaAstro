<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true;
    } else {
      return false;
    }
  }

  var imageElement = document.querySelector("#bg-image-animaciones") as HTMLImageElement;

  if (isEdge()) {
    imageElement.src = "animaciones.webp";
  } else {
    imageElement.src = "animaciones.avif";
  }
</script>

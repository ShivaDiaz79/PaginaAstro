</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true;
    } else {
      return false;
    }
  }

  let imageElement = document.querySelector("#bg-image-aplicaciones") as HTMLImageElement; // TypeScript

  if (isEdge()) {
    imageElement.src = "aplicaciones.webp";
  } else {
    imageElement.src = "aplicaciones.avif";
  }
</script>

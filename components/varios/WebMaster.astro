    src="webmaster.avif"
    id="bg-image-webmaster"
  />
</Section>

<script>
  function isEdge() {
    if (
      navigator.userAgent.indexOf("Edge") > -1 ||
      navigator.userAgent.indexOf("Edg") > -1
    ) {
      return true;
    } else {
      return false;
    }
  }

  var imageElement = document.querySelector("#bg-image-webmaster") as HTMLImageElement;

  if (isEdge()) {
    imageElement.src = "webmaster.webp";
  } else {
    imageElement.src = "webmaster.avif";
  }
</script>
